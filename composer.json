{
  "name": "bpc/ci-framework",
  "description": "the framework evolved from ci",
  "authors": [
    {
      "name": "BPC Dev Team"
    }
  ],
  "license": "MIT",
  "require": {
    "php": "^7.4",
    "ext-bcmath": "*",
    "ext-curl": "*",
    "ext-gd": "*",
    "ext-iconv": "*",
    "ext-json": "*",
    "ext-libxml": "*",
    "ext-mbstring": "*",
    "ext-memcached": "*",
    "ext-mysqli": "*",
    "ext-pcntl": "*",
    "ext-redis": "*",
    "ext-swoole": "~4.3",
    "bpc/form-validation": "^20.4",
    "codeigniter/framework": "^3.1",
    "illuminate/container": "^6.0",
    "illuminate/session": "^6.0",
    "illuminate/support": "^6.0",
    "mongodb/mongodb": "^1.5",
    "monolog/monolog": "^1.23|^2.0",
    "psr/log": "^1.1",
    "psr/simple-cache": "^1.0",
    "vlucas/phpdotenv": "^3.3"
  },
  "autoload": {
    "psr-4": {
      "CI\\": "src/"
    },
    "files": [
      "src/core/Common.php",
      "src/config/constants.php"
    ],
    "classmap": [
      "vendor/codeigniter/framework/system/core/",
      "vendor/codeigniter/framework/system/libraries/",
      "vendor/codeigniter/framework/system/database/"
    ]
  },
  "repositories": [
    {
      "type": "composer",
      "url": "http://composer-packages.jijigong.com"
    }
  ]
}
